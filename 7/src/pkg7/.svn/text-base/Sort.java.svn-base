package pkg7;

public class Sort
{
    public static int[] sort(int a, int b)
    {
        int[] resArr=new int[2];
        if(a>b)
        {
            resArr[0]=b;
            resArr[1]=a;
        }
        else
        {
            resArr[0]=a;
            resArr[1]=b;
        }
        return resArr;
    }
    public static int[] sort(int a, int b, int c)
    {
        int temp=0;
        int[] resArr=new int[3];
        if(a>b)
        {
            temp=a;
            a=b;
            b=temp;
        }
        if(a>c)
        {
            temp=a;
            a=c;
            c=temp;
        }
        if(b>c)
        {
            temp=b;
            b=c;
            c=temp;
        }
        resArr[0]=a;
        resArr[1]=b;
        resArr[2]=c;
        return resArr;
    }
    public static int[] sort(int a, int b, int c, int d)
    {
        int temp=0;
        int[] resArr=new int[4];
        if(a>c)
        {
            temp=a;
            a=c;
            c=temp;
        }
        if(b>d)
        {
            temp=b;
            b=d;
            d=temp;
        }
        if(a>b)
        {
            temp=a;
            a=b;
            b=temp;
        }
        if(c>d)
        {
            temp=c;
            c=d;
            d=temp;
        }
        if(b>c)
        {
            temp=b;
            b=c;
            c=temp;
        }
        resArr[0]=a;
        resArr[1]=b;
        resArr[2]=c;
        resArr[3]=d;
        return resArr;
    }
}
