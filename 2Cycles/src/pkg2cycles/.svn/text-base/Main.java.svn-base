package pkg2cycles;

public class Main
{
    public static void main(String[] args)
    {
        int quantity=0;
        int sum=0;
        for(int i=1; i<=99;++i)
        {
            if(i%2==0)
            {
                quantity++;
                sum+=i;
            }
        }
        System.out.println("Количество четных чисел: "+quantity);
        System.out.println("Сумма четных чисел: "+sum);
    }
}
